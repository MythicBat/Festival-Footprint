{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 520,
  "height": 420,
  "data": { "url": "data/festival_genres_percent.csv", "format": {"type":"csv"} },
  "transform": [
    { "calculate": "toNumber(trim(datum.percent))", "as": "pct" }
  ],
  "mark": { "type": "bar", "cornerRadiusEnd": 3 },
  "encoding": {
    "y": { "field": "genre", "type": "nominal", "sort": "-x", "title": null },
    "x": { "field": "pct", "type": "quantitative", "title": "Share of festivals (%)" },
    "color": { "field": "genre", "type": "nominal", "legend": null },
    "tooltip": [
      { "field": "genre", "title": "Genre" },
      { "field": "pct", "title": "Percent", "format": ".0f" }
    ]
  },
  "view": { "stroke": null }
}
