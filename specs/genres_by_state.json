{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 380,
  "height": 380,
  "data": { "url": "data/festival_genres_percent.csv", "format": {"type": "csv"} },
  "params": [
    {"name": "uiState", "value": ""},
    {"name": "uiGenre", "value": ""}
  ],
  "transform": [
    {
      "calculate":
        "toNumber(replace(trim(isValid(datum[' percent']) ? datum[' percent'] : (isValid(datum.percent) ? datum.percent : (isValid(datum.Percent) ? datum.Percent : (isValid(datum.share) ? datum.share : (isValid(datum.Share) ? datum.Share : ''))))), '%', ''))",
      "as": "pct"
    },
    { "calculate": "isValid(datum.genre) ? datum.genre : (isValid(datum.Genre) ? datum.Genre : '')", "as": "genre_clean" },
    { "filter": "isValid(datum.genre_clean) && isFinite(datum.pct)" },
    { "filter": "uiGenre== '' || datum.genre==uiGenre"},
    { "filter": "uiState== '' || datum.state==uiState"}
  ],
  "mark": { "type": "bar", "cornerRadiusEnd": 3 },
  "encoding": {
    "y": { "field": "genre_clean", "type": "nominal", "sort": "-x", "title": null },
    "x": { "field": "pct", "type": "quantitative", "title": "Share of festivals (%)" },
    "color": { "field": "genre_clean", "type": "nominal", "legend": null },
    "tooltip": [
      { "field": "genre_clean", "title": "Genre" },
      { "field": "pct", "title": "Percent", "format": ".0f" }
    ]
  },
  "view": { "stroke": null }
}
