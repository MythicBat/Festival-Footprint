{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 520,
  "height": 420,
  "data": { "url": "data/festival_genres_percent.csv", "format": {"type": "csv"} },
  "transform": [
    {
      "calculate":
        "toNumber(replace(trim(isValid(datum.percent) ? datum.percent : (isValid(datum.Percent) ? datum.Percent : '')), '%', ''))",
      "as": "pct"
    },
    { "filter": "isValid(datum.genre) || isValid(datum.Genre)" },
    {
      "calculate": "isValid(datum.genre) ? datum.genre : datum.Genre",
      "as": "genre_clean"
    },
    { "filter": "isFinite(datum.pct)" }
  ],
  "mark": { "type": "bar", "cornerRadiusEnd": 3 },
  "encoding": {
    "y": { "field": "genre_clean", "type": "nominal", "sort": "-x", "title": null },
    "x": { "field": "pct", "type": "quantitative", "title": "Share of festivals (%)" },
    "color": { "field": "genre_clean", "type": "nominal", "legend": null },
    "tooltip": [
      { "field": "genre_clean", "title": "Genre" },
      { "field": "pct", "title": "Percent", "format": ".0f" }
    ]
  },
  "view": { "stroke": null }
}